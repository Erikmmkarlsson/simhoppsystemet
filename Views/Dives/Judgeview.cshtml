@model simhoppsystemet.Models.Dive

@{
    ViewData["Title"] = "Judge the dives";
}

<h3>Edit dive</h3>
<p>Give the scores to the competitiors:</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CompetitorId" />
            <input type="hidden" asp-for="CompetitionId" />
            <input type="hidden" asp-for="DiveGroup" />
            <div class="form-group">
                <label asp-for="Judge1" class="control-label"></label>
                <input asp-for="Judge1" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Judge2" class="control-label"></label>
                <input asp-for="Judge2" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Judge3" class="control-label"></label>
                <input asp-for="Judge3" class="form-control" />
                
            </div>
            <input type="hidden" asp-for="Score" />
            <div class="form-group">
                <input type="submit" value="Save & back to competition" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>


