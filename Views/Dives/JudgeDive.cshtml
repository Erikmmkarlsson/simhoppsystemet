@model IEnumerable<simhoppsystemet.Models.Dive>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiveGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PointsA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PointsB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PointsC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    @if (item.CompetitorId == ViewBag.CompetitorId && item.CompetitionId == ViewBag.CompetitionId)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiveGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointsA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointsB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointsC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
