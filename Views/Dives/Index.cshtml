            <td>
                @Html.DisplayFor(modelItem => item.Competition.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiveGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointsA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointsB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointsC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
