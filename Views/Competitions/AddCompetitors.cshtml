@model simhoppsystemet.Models.Competition


<h4>Add new competitors</h4>
<hr />
        <h4>Current Divers</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Name
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Organization
                    </th>

                </tr>
            </thead>

    <tbody>

    @foreach (var std in ViewData["competitorsAdded"] as IList<Competitor>)
        {
        <tr>
            <td>
                @std.Name
            </td>
            <td>
                @std.Age
            </td>
            <td>
                @std.Organization
            </td>
        </tr>
     }
        </tbody>
     </table>

        <form asp-action="AddCompetitors">
            <div class="form-group">

                <label for="CompetitorName" class="control-label"></label>
                <select name="CompetitorName" class="dropdown" asp-items="ViewBag.competitors"></select>
            </div>


            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>

        </form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
